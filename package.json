{
  "name": "hello-books",
  "version": "1.0.0",
  "description": "Hello-Books is a simple application that helps manage a library and its processes like stocking, tracking and renting books. With this application users are able to find and rent books. The application also has an admin section where the admin can do things like add books, delete books, increase the quantity of a book etc.",
  "main": "./server/index.js",
  "scripts": {
    "scss": "./node_modules/.bin/node-sass --watch ./templates/scss/style.scss -o ./templates/css",
    "build": "babel ./server -d ./dist",
    "serve": "node ./dist/index.js",
    "start": "./node_modules/.bin/babel-node ./server/index.js",
    "test": "./node_modules/.bin/babel-node ./node_modules/babel-istanbul/lib/cli.js cover ./node_modules/mocha/bin/_mocha -- --recursive -R spec ./test/*.js --timeout 10000 --compilers:js babel-core/register",
    "coverage": "istanbul cover _mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amarachukwu-agbo/hello-books.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amarachukwu-agbo/hello-books/issues"
  },
  "homepage": "https://github.com/amarachukwu-agbo/hello-books#readme",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^8.0.1",
    "babel-istanbul": "^0.12.2",
    "babel-polyfill": "^6.3.14",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-mocha": "^4.11.0",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^2.4.5",
    "mocha-lcov-reporter": "^1.3.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "body-parser": "^1.18.2",
    "ejs": "^2.5.7",
    "express": "^4.16.2",
    "fs": "0.0.1-security",
    "jsonfile": "^4.0.0"
  }
}
