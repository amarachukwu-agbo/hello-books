{
    "root": true,
    "parser": "babel-eslint",
    "extends": "airbnb-base",
    "env": {
        "mocha": true,
        "node": true,
        "es6": true
    },
    "rules": {
        "no-console" : 0,
        "linebreak-style" : 0,
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "new-cap": 0,
        "consistent-return": 0,
        "no-param-reassign": 0,
        "curly": ["error", "multi-line"],
        "import/no-unresolved": 0,
        "no-shadow": ["error", { "allow": ["req", "res", "err"] }]
    }
}